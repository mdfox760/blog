        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        </head>

  <body>
    <%= render 'home/header' %>
    <div class="container">
      <%= yield %>
    </div>
    <%= render 'home/footer' %>
  </body>
</html>
